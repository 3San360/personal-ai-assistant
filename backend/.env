# Environment Variables for Personal AI Assistant
# Development configuration

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=dev-secret-key-for-testing

# Server Configuration
HOST=localhost
PORT=5000
CORS_ORIGINS=http://localhost:4200,http://127.0.0.1:4200

# Logging
LOG_LEVEL=INFO

# Voice Settings
VOICE_RATE=200
VOICE_VOLUME=0.9

# API Keys (add your own keys here)
# OPENWEATHER_API_KEY=your_openweather_api_key_here
# NEWS_API_KEY=your_news_api_key_here

# Google Calendar API (optional)
# GOOGLE_CALENDAR_CREDENTIALS_FILE=path/to/your/google_credentials.json
# GOOGLE_CALENDAR_TOKEN_FILE=path/to/your/google_token.json
