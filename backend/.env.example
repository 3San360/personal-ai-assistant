# Environment Variables for Personal AI Assistant
# Copy this file to .env and fill in your actual API keys

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_SECRET_KEY=your-super-secret-key-change-this-in-production

# API Keys
OPENWEATHER_API_KEY=your_openweather_api_key_here
NEWS_API_KEY=your_news_api_key_here

# Google Calendar API
GOOGLE_CALENDAR_CREDENTIALS_FILE=path/to/your/google_credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=path/to/your/google_token.json

# Server Configuration
HOST=localhost
PORT=5000
CORS_ORIGINS=http://localhost:4200,http://127.0.0.1:4200

# Database (if you want to add persistence later)
# DATABASE_URL=sqlite:///assistant.db

# Logging
LOG_LEVEL=INFO

# Voice Settings
VOICE_RATE=200
VOICE_VOLUME=0.9

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cache Settings (for API responses)
CACHE_TIMEOUT=300
